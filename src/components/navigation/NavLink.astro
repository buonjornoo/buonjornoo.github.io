---
interface Props {
  href: string;
  color?: string;
  class?: string;
}

const { href, color = 'text-teletext-cyan', class: className = '' } = Astro.props;
const isActive = Astro.url.pathname === href || Astro.url.pathname === href.replace(/\/$/, '');
---

<a
  href={href}
  class:list={[
    'px-[1ch] py-1 font-teletext font-bold transition-colors',
    isActive ? 'text-teletext-yellow' : color,
    'hover:text-teletext-yellow',
    className,
  ]}
  aria-current={isActive ? 'page' : undefined}
>
  <slot />
</a>
