---
interface Props {
  title: string;
  pageNumber?: string;
  bgColor?: string;
  textColor?: string;
}

const {
  title,
  pageNumber,
  bgColor = 'bg-teletext-yellow',
  textColor = 'text-teletext-black',
} = Astro.props;
---

<header class={`w-full px-[1ch] py-1 flex justify-between items-center font-teletext ${bgColor} ${textColor}`}>
  <span class="font-bold uppercase truncate">{title}</span>
  {pageNumber && <span class="font-bold shrink-0">P{pageNumber}</span>}
</header>
