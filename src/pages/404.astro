---
import BaseLayout from '../layouts/BaseLayout.astro';
import DoubleHeight from '../components/teletext/DoubleHeight.astro';
import Separator from '../components/teletext/Separator.astro';
---

<BaseLayout title="Page Not Found" description="The requested page could not be found." pageNumber="404">
  <div class="w-full max-w-[80ch] mx-auto px-[2ch] py-[2ch]">
    <DoubleHeight as="p" color="text-teletext-red">PAGE NOT FOUND</DoubleHeight>

    <p class="text-teletext-yellow mt-[2ch] font-bold">
      Error 404
    </p>

    <p class="text-teletext-white mt-[2ch]">
      The page you requested is not available.<br />
      It may have been moved or the page number is incorrect.
    </p>

    <div class="my-[2ch]">
      <Separator color="text-teletext-cyan" char="â”€" />
    </div>

    <p class="text-teletext-cyan mb-[1ch] font-bold">Available pages:</p>

    <div class="space-y-[0.5ch]">
      <p><span class="text-teletext-white">Home + About</span><span class="text-teletext-yellow">...........100</span></p>
      <p><span class="text-teletext-white">Projects</span><span class="text-teletext-yellow">...............200</span></p>
      <p><span class="text-teletext-white">Blog</span><span class="text-teletext-yellow">...................300</span></p>
      <p><span class="text-teletext-white">Contact</span><span class="text-teletext-yellow">................400</span></p>
    </div>

    <p class="text-teletext-green mt-[2ch] text-teletext-sm">
      Type a 3-digit page number to navigate.
    </p>
  </div>
</BaseLayout>
