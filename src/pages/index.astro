---
import PageLayout from '../layouts/PageLayout.astro';
import DoubleHeight from '../components/teletext/DoubleHeight.astro';
import Separator from '../components/teletext/Separator.astro';
import { getEntry, render } from 'astro:content';

const about = await getEntry('pages', 'about');
if (!about) throw new Error('About page content not found');
const { Content } = await render(about);
---

<PageLayout
  title={about.data.title}
  description={about.data.description}
  pageNumber={about.data.pageNumber}
>
  <!-- Welcome -->
  <section class="mb-[2ch]">
    <DoubleHeight as="h1" color="text-teletext-yellow">Jorne</DoubleHeight>
    <p class="text-teletext-cyan mt-[1ch]">
      Empathic UX Designer,<br />Pragmatic Product Manager
    </p>
  </section>

  <Separator color="text-teletext-cyan" char="â”€" />

  <div class="prose-teletext my-[2ch]">
    <Content />
  </div>
</PageLayout>

<style>
  .prose-teletext :global(h2) {
    color: var(--color-teletext-yellow);
    font-size: 1.25rem;
    font-weight: 700;
    margin-top: 2em;
    margin-bottom: 0.5em;
  }
  .prose-teletext :global(p) {
    margin-bottom: 1em;
    line-height: 1.5;
  }
  .prose-teletext :global(a) {
    color: var(--color-teletext-cyan);
  }
  .prose-teletext :global(a:hover) {
    color: var(--color-teletext-yellow);
  }
  .prose-teletext :global(hr) {
    border: none;
    border-top: 1px solid var(--color-teletext-green);
    opacity: 0.5;
    margin: 2em 0;
  }
</style>
